          .col.item.social
            a(href='https://www.facebook.com/ninhnguyen375' target="blank")
              i.icon.ion-social-facebook
            a(href='#')
              i.icon.ion-social-twitter
            a(href='#')
              i.icon.ion-social-snapchat
            a(href='#')
              i.icon.ion-social-instagram
            a(href='https://github.com/ninhnguyen375/doanweb2' target="blank")
              i.icon.ion-social-github
