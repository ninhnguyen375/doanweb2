    script.
      $(document).ready(()=>{
        //- Toggle check box
        let checkBox;
        $("#checkAll").click(function() {
            var checkBoxes = $("input[type=checkbox");
            checkBoxes.prop("checked", !checkBoxes.prop("checked"));
        });
        //- Toggle left-menu
        $('#toggleLeftMenu').on('click',()=>{
          $('.left-menu').toggleClass('show');
        });
        //- submit remove many
        $('#deleteMany').on('submit', () => {
          let ids = [];
          checkBox = document.querySelectorAll('.checkbox:checked');
          checkBox.forEach(ch => {
            if(ch.value == 'on'){
              alert('you can not remove an admin');
              ch.click();
            } else {
              ids.push(ch.value);
            }
          });
          if(ids[0]){
            $('#idToDeletes').val(ids);
            return true;
          } else {
            return false;
          }
        })
      })

